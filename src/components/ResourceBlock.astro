---
// This is the frontmatter section where you can import other components or scripts if needed

import { Icon } from 'astro-icon'

---
<a class="resource-link" href={Astro.props.resourceDetailsLink}>
  <div class="resource-block">  
    <div class="resource-block-inner">
      <div class="icon-container">
      <Icon name={Astro.props.icon} />
      </div>
      <div class="content-wrap">
        <h4>{Astro.props.title} ></h4>
        <p>{Astro.props.description}</p>
      </div>
    </div>
  </div>
</a>
  
  <style type="scss">
    
   .resource-link {
    text-decoration: none !important;  
    &:hover, &:focus {
      
      p {
        text-decoration: none;  
      }
    }
  }
    .icon-container {
        /* background-color: var(--theme-bg-gradient);
        background-color: var(--theme-dim-lighter); */
        background-color: var(--custom-dark-blue);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 4rem;
        width: 4rem;
        min-width: 65px;
        border-radius: 4rem;
        
    }
    .icon-container [astro-icon] {
        font-size: 3em;
        color: var(--custom-white);
    }
    .resource-block p {
      text-decoration: none;
    }
    .resource-block {
      /* styles for the card container */
      /* background-color: var(--theme-code-inline-bg); */
      background-color: var(--theme-bg-gradient-top);
      box-sizing: border-box;
      /* margin: 0rem 2% 2% 0rem; */
      /* max-width: 31%; */
     /*  padding: 1rem; */
      /* border-radius: 12px; */
      border: 1px solid var(--custom-maroon-50);
      box-shadow: -2px 2px 0px var(--custom-maroon-50);
      transition: all 150ms ease-in-out;
      animation: fadeInUp 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
      margin: 1em 0;
      .resource-block-inner {
        padding: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        height: 100%;
        padding: 1rem;
      }
    }
    .resource-block:hover,.resource-block:focus {
        border-color: var(--custom-maroon);
        background-color: var(--theme-bg-gradient-top);
        box-shadow: -2px 2px 0px var(--custom-maroon);
        h4 {
          color: var(--custom-maroon);
        }
    }
    .resource-block h4 {
        margin: 0rem 0 .5rem;
    }
    .resource-block p {
      
      line-height: 1.3;
      margin-bottom: 0rem;
    }

  

  </style>
  